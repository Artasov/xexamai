{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "rootDir": "src/renderer",
    "outDir": "build/renderer",
    "sourceMap": true,
    "types": [
      "node"
    ],
    "isolatedModules": false,
    "allowImportingTsExtensions": false,
    "noEmit": false
  },
  "include": [
    "src/renderer/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
}


{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "build/renderer",
    "sourceMap": true,
    "types": [
      "node"
    ],
    "isolatedModules": false,
    "allowImportingTsExtensions": false,
    "noEmit": false,
    "jsx": "react-jsx"
  },
  "include": [
    "src/renderer/**/*",
    "src/shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
}

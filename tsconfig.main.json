{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "noEmitOnError": false,
    "moduleResolution": "node",
    "noEmitOnError": false,
    "noEmitOnError": false,
    "importHelpers": false,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "moduleResolution": "node",
    "noEmitHelpers": false,
    "lib": [
      "ES2020",
      "DOM"
    ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "build",
    "sourceMap": true,
    "types": [
      "node"
    ]
  },
  "include": [
    "src/main/**/*",
    "src/preload/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "src/renderer/**/*"
  ]
}


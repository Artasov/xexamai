{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "XEXAMAI",
  "version": "1.1.0",
  "identifier": "xldev-xexamai",
  "build": {
    "beforeDevCommand": "npm run dev:renderer",
    "beforeBuildCommand": "npm run build:renderer",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist/renderer"
  },
  "app": {
    "withGlobalTauri": true,
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "title": "XEXAMAI",
        "width": 420,
        "height": 780,
        "minWidth": 400,
        "minHeight": 500,
        "resizable": true,
        "decorations": false,
        "transparent": true,
        "fullscreen": false,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "deep-link": {
      "desktop": [
        {
          "schemes": [
            "xexamai"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.ico",
      "icons/icon.png",
      "icons/icon.icns"
    ],
    "resources": [
      "resources/**/*"
    ]
  }
}

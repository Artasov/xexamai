export type AppState = {
  isRecording: boolean;
  durationSec: number; // capture window in seconds
  mime: string;
};

export const state: AppState = {
  isRecording: false,
  durationSec: 15,
  mime: 'audio/webm',
};

export function setDuration(sec: number) {
  state.durationSec = sec;
}

export function setRecording(v: boolean) {
  state.isRecording = v;
}

